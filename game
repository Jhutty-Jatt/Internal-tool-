<body>
  <div class="wrapper">
    <div class="hud-top">
      <span>HI&nbsp;<span id="hiScore">00000</span></span>
      <span><span id="scoreText">00000</span></span>
    </div>

    <div class="hud-bottom">
      <div><span class="label">Score:</span> <span id="score">0</span></div>
      <div><span class="label">Distance:</span> <span id="distance">0</span> m</div>
      <div><span class="label">Time:</span> <span id="time">0.0</span> s</div>
    </div>

    <div id="game">
      <!-- sky -->
      <div class="cloud" style="left:120px; top:40px;"></div>
      <div class="cloud" style="left:420px; top:30px;"></div>
      <div class="cloud" style="left:650px; top:45px;"></div>
      <div class="star"  style="left:80px;  top:20px;"></div>
      <div class="star"  style="left:300px; top:18px;"></div>
      <div class="star"  style="left:560px; top:24px;"></div>

      <div id="ground"></div>

      <!-- characters -->
      <div id="dino"   class="sprite"></div>
      <div id="runner" class="sprite"></div>

      <!-- overlay -->
      <div id="overlay">
        <div id="message">PRESS SPACE TO START</div>
        <div class="hint">
          Space / ↑ jump • Avoid bush, tree, pit & mini animal • Enter to restart
        </div>
      </div>
    </div>
  </div>

  <script>
    const game = document.getElementById("game");
    const runner = document.getElementById("runner");
    const scoreEl = document.getElementById("score");
    const distanceEl = document.getElementById("distance");
    const timeEl = document.getElementById("time");
    const hiScoreEl = document.getElementById("hiScore");
    const scoreText = document.getElementById("scoreText");
    const overlay = document.getElementById("overlay");
    const messageEl = document.getElementById("message");

    const GAME_WIDTH = 800;
    const GROUND_Y = 50;
    const RUNNER_X = 150;
    const GRAVITY = 0.5;
    const JUMP_FORCE = 10;

    let runnerY = 0;
    let velocityY = 0;
    let isJumping = false;
    let isOnGround = true;

    let obstacles = [];
    let lastSpawnTime = 0;
    let spawnInterval = 1300;
    let baseSpeed = 4;

    let isGameRunning = false;
    let isGameOver = false;

    let lastTimestamp = null;
    let startTime = null;
    let elapsedTime = 0;
    let distance = 0;
    let score = 0;
    let hiScore = 0;

    overlay.classList.add("show");

    function resetGameState() {
      obstacles.forEach(o => game.removeChild(o.el));
      obstacles = [];

      runnerY = 0;
      velocityY = 0;
      isJumping = false;
      isOnGround = true;
      runner.style.bottom = GROUND_Y + "px";

      baseSpeed = 4;
      spawnInterval = 1300;

      score = 0;
      distance = 0;
      elapsedTime = 0;

      scoreEl.textContent = "0";
      distanceEl.textContent = "0";
      timeEl.textContent = "0.0";
      scoreText.textContent = "00000";

      lastSpawnTime = 0;
      lastTimestamp = null;
      startTime = null;

      isGameOver = false;
      isGameRunning = false;

      messageEl.textContent = "PRESS SPACE TO START";
      overlay.classList.add("show");
    }

    function startGame() {
      if (isGameRunning) return;
      isGameRunning = true;
      overlay.classList.remove("show");
      requestAnimationFrame(loop);
    }

    function endGame() {
      isGameRunning = false;
      isGameOver = true;

      if (score > hiScore) {
        hiScore = score;
        hiScoreEl.textContent = pad(hiScore);
      }

      messageEl.textContent = "GAME OVER";
      overlay.classList.add("show");
    }

    function pad(num) {
      return num.toString().padStart(5, "0");
    }

    function randomObstacleType() {
      const r = Math.random();
      if (r < 0.35) return "bush";
      if (r < 0.65) return "tree";
      if (r < 0.85) return "animal";
      return "pit";
    }

    function spawnObstacle() {
      const type = randomObstacleType();
      const el = document.createElement("div");
      el.classList.add("obstacle", "sprite", type);
      el.style.left = GAME_WIDTH + "px";
      el.style.bottom = (type === "pit" ? GROUND_Y - 2 : GROUND_Y) + "px";
      game.appendChild(el);

      let width = 60;
      if (type === "bush")   width = 45;
      if (type === "tree")   width = 60;
      if (type === "animal") width = 40;
      if (type === "pit")    width = 60;

      obstacles.push({ type, el, x: GAME_WIDTH, width, scored: false });
    }

    function updateRunner(dt) {
      if (!isOnGround || isJumping) {
        velocityY -= GRAVITY;
        runnerY += velocityY;

        if (runnerY <= 0) {
          runnerY = 0;
          velocityY = 0;
          isOnGround = true;
          isJumping = false;
        }
      }
      runner.style.bottom = (GROUND_Y + runnerY) + "px";
    }

    function updateObstacles(dt) {
      const speed = baseSpeed + elapsedTime * 0.02;

      for (let i = obstacles.length - 1; i >= 0; i--) {
        const o = obstacles[i];
        o.x -= speed;
        o.el.style.left = o.x + "px";

        if (!o.scored && RUNNER_X > o.x + o.width) {
          o.scored = true;
          score += 10;
          scoreEl.textContent = score;
          scoreText.textContent = pad(score);
        }

        if (o.x + o.width < -80) {
          game.removeChild(o.el);
          obstacles.splice(i, 1);
        }
      }
    }

    function checkCollisions() {
      const runnerRect = runner.getBoundingClientRect();
      const gameRect = game.getBoundingClientRect();

      const r = {
        left:   runnerRect.left   - gameRect.left,
        right:  runnerRect.right  - gameRect.left,
        top:    runnerRect.top    - gameRect.top,
        bottom: runnerRect.bottom - gameRect.top
      };

      for (const o of obstacles) {
        const rect = o.el.getBoundingClientRect();
        const ob = {
          left:   rect.left   - gameRect.left,
          right:  rect.right  - gameRect.left,
          top:    rect.top    - gameRect.top,
          bottom: rect.bottom - gameRect.top
        };

        const hit =
          r.left < ob.right &&
          r.right > ob.left &&
          r.top < ob.bottom &&
          r.bottom > ob.top;

        if (hit) {
          endGame();
          return;
        }
      }
    }

    function loop(timestamp) {
      if (!isGameRunning) return;

      if (!lastTimestamp) {
        lastTimestamp = timestamp;
        startTime = timestamp;
      }
      const dtMs = timestamp - lastTimestamp;
      const dt = dtMs / 1000;
      lastTimestamp = timestamp;

      elapsedTime = (timestamp - startTime) / 1000;
      timeEl.textContent = elapsedTime.toFixed(1);

      const speedForDistance = baseSpeed + elapsedTime * 0.02;
      distance += speedForDistance * dt * 5;
      distanceEl.textContent = Math.floor(distance);

      if (timestamp - lastSpawnTime > spawnInterval) {
        spawnObstacle();
        lastSpawnTime = timestamp;
        if (spawnInterval > 700) spawnInterval -= 20;
      }

      updateRunner(dt);
      updateObstacles(dt);
      checkCollisions();

      if (isGameRunning) requestAnimationFrame(loop);
    }

    document.addEventListener("keydown", (e) => {
      if (e.code === "Space" || e.code === "ArrowUp") {
        e.preventDefault();
        if (!isGameRunning && !isGameOver) startGame();
        if (isOnGround && !isGameOver) {
          isOnGround = false;
          isJumping = true;
          velocityY = JUMP_FORCE;
        }
      }
      if (e.code === "Enter" && isGameOver) {
        resetGameState();
      }
    });

    resetGameState();
  </script>
</body>
</html>

