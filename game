<head>
  <meta charset="UTF-8" />
  <title>Dino Chase – Real Sprites</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      background: #202124;          /* dark Chrome page */
      font-family: monospace;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      color: #f5f5f5;
    }

    .wrapper { text-align: center; }

    .hud-top {
      display: flex;
      justify-content: flex-end;
      width: 800px;
      margin: 0 auto 4px;
      font-size: 12px;
      color: #bfbfbf;
    }

    .hud-top span { margin-left: 16px; }

    .hud-bottom {
      display: flex;
      justify-content: space-between;
      width: 800px;
      margin: 4px auto 10px;
      font-size: 13px;
    }
    .hud-bottom span.label { font-weight: bold; }

    #game {
      width: 800px;
      height: 220px;
      background: #202124;
      border: 1px solid #555;
      position: relative;
      overflow: hidden;
    }

    #ground {
      position: absolute;
      left: 0;
      right: 0;
      bottom: 50px;
      height: 2px;
      background: #f5f5f5;
    }

    /* sky extras */
    .cloud, .star {
      position: absolute;
      top: 30px;
      opacity: 0.25;
    }
    .cloud {
      width: 40px;
      height: 12px;
      border-radius: 10px;
      background: #f5f5f5;
    }
    .cloud::before,
    .cloud::after {
      content: "";
      position: absolute;
      width: 20px;
      height: 10px;
      border-radius: 10px;
      background: #f5f5f5;
      top: -4px;
    }
    .cloud::before { left: 2px; }
    .cloud::after  { right: 2px; }

    .star {
      width: 3px;
      height: 3px;
      border-radius: 50%;
      background: #f5f5f5;
    }

    /* ====== SPRITES USING REAL IMAGES ====== */

    .sprite {
      background-repeat: no-repeat;
      background-position: center bottom;
      background-size: contain;
      image-rendering: pixelated; /* gives retro feel */
    }

    /* runner (human) */
    #runner {
      position: absolute;
      bottom: 50px;
      left: 150px;
      width: 50px;
      height: 60px;
      background-image: url("human.png");
      animation: bob 0.25s steps(2) infinite;
    }

    /* dino */
    #dino {
      position: absolute;
      bottom: 50px;
      left: 100px; /* behind the human */
      width: 70px;
      height: 50px;
      background-image: url("dino.png");
      animation: bob 0.25s steps(2) infinite;
    }

    @keyframes bob {
      0% { transform: translateY(0); }
      50% { transform: translateY(-2px); }
      100% { transform: translateY(0); }
    }

    /* obstacles */
    .obstacle {
      position: absolute;
      bottom: 50px;
    }

    .bush {
      width: 45px;
      height: 40px;
      background-image: url("bush.png");
    }

    .tree {
      width: 60px;
      height: 90px;
      background-image: url("tree.png");
    }

    .animal {
      width: 40px;
      height: 30px;
      background-image: url("animal.png");
    }

    /* pit: you can use image or just a dark hole */
    .pit {
      width: 60px;
      height: 14px;
      bottom: 48px;
      background: #202124;
      border-top: 2px solid #f5f5f5;
      /* if you have an image: comment above & uncomment below
      background-image: url("pit.png");
      background-color: transparent;
      */
    }

    /* overlay */
    #overlay {
      position: absolute;
      inset: 0;
      background: rgba(32, 33, 36, 0.9);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: #f5f5f5;
      font-size: 14px;
      display: none;
    }
    #overlay.show { display: flex; }

    #message {
      margin-bottom: 6px;
      font-size: 16px;
      letter-spacing: 2px;
    }

    .hint { font-size: 11px; opacity: 0.8; }
